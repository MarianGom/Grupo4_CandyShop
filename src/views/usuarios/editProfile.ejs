<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <link rel="shortcut icon" href="/img/favicon.png" type="image/png">
    
    <link rel="stylesheet" href="/css/room.css">
    <link rel="stylesheet" href="/css/perfil.css">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
 
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- JS -->
    <script src="/js/menu.js"></script>

</head>
<body onresize="resizeMenu()">


    <%- include('../partials/nav') %>
    <main>

        <form action="/user/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

            <div class="topPerfil">
                <h1>Editar perfil</h1>
                <div class="imgPerfil">

                    <% if (user.fotoPerfil) {%>
                        <!-- <div class="img" style="background-image: url('/img/usuarios/<%= user.fotoPerfil %>');">
                        </div> -->
                        <img src="/img/usuarios/<%= user.fotoPerfil %>" alt="<%= user.nombre%>">
                    <%} else {%>
                        <p>Todavia no posee imagen</p>
                    <%}%>
                </div>
            </div>
            <!-- <input type="hidden" name="oldImagen" value="<%= user.fotoPerfil%>">
            <input type="file" name="image"> -->


            <div class="formInputs">
                <div class="groupInput">
                    <label for="nombreUser">Nombre:</label>
                    <input type="text" id="nombreUser" name="nombreUser" value="<%= user.nombre %>">

                    <!-- En caso de error -->
                    <div class="nombreError">
                    </div>
                </div>
        
                <br>
        
                <div class="groupInput">
                    <label for="apellidoUser">Apellido:</label>
                    <input type="text" id="apellidoUser" name="apellidoUser" value="<%= user.apellido %>">

                    <!-- En caso de error -->
                    <div class="apellidoError">
                    </div>
                </div>
        
                <br>
        
                <div class="groupInput">
                    <label for="mailUser">Mail:</label>
                    <input type="text" id="mailUser" name="mailUser" value="<%= user.email %>">

                    <!-- En caso de error -->
                    <div class="mailError">
                    </div>
                </div>
        
                <br>
        
                <div class="groupInput">
                    <label for="password">Contraseña:</label>
                    <input type="text" id="password" name="password" value="<%= user.password %>" maxlength="16" required>

                    <!-- En caso de error -->
                    <div class="passwordError">
                    </div>
                </div>

                <!-- <div class="groupInput">
                    <label for="confirmPassword">Confirmar Contraseña:</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="********" maxlength="16" required>

                    <div class="confirmacionError">
                    </div>
                </div> -->
        
                <br>
        
                <div class="groupInput">
                    <label for="telefonoUser">Telefono:</label>
                    <input type="text" id="telefonoUser" name="telefonoUser" value="<%= user.telefono %>">

                    <!-- En caso de error -->
                    <div class="telefonoError">
                    </div>
                </div>
            </div>
    
            <br>


            <br>
            <hr>
            <br>

            <div class="submit">
                <button type="submit" id="add">
                    <i class="bi bi-plus-circle"></i>
                    GUARDAR CAMBIOS
                </button>
            </div>
        </form>
        

    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>