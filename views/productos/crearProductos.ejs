    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- JS -->
    <script src="/js/menu.js"></script>
    <script src="/js/banner.js"></script>

</head>

<body>

    <%- include('../partials/nav') %>

        <main>
            <div id="banner-rosa">
            </div>

            <div class="containerAdd">
                <div class="add-product">
                    <h1>Nuevo producto</h1>
                </div>
            </div>

            <form action="/listadoProductos/" method="POST" enctype="multipart/form-data">
                <div class="general">
                    <h2>General</h2>
                    <div class="input-nombre">
                        <label class="label-titulos" for="nombre">Nombre del producto</label>
                        <input type="text" class="input-nombre" name="nombre" placeholder="Nombre de producto">
                    </div>
                    <div class="input-sabor">
                        <input type="text" class="input-sabor" name="sabor" placeholder="Sabor Manzana">
                    </div>
                    <div class="input-descripcion">
                        <input type="text" class="input-descrip" name="descripcion" placeholder="Escriba una descripción del producto...">
                    </div>
                        <input type="file" id="image" name="image">
                </div>

                <div class="stock">
                    <h2>Stock</h2>
                    <div class="input-stock">
                        <label class="label-subtitulos" for="stock">Stock</label>
                        <input type="text" class="input-stock" name="stock" placeholder="1000">
                    </div>
                </div>

                <div class="precio">
                    <h2>Precio</h2>
                    <div class="input-precio">
                        <label class="label-subtitulos" for="precio">Precio Original</label>
                        <input type="text" class="input-precio" name="precio" placeholder="150">
                    </div>
                </div>

                <div class="descripcion">
                    <label class="label-titulos" for="nombre">Descripción</label>
                </div>
                <div class="precio">
                    <label class="label-titulos" for="precio">Precio</label>
                    <div class="precioOyP">
                        <div class="input-precio">
                        </div>
                    </div>
                </div>
                <div class="stock">
                    <label class="label-titulos" for="stock">Stock</label>
                </div>
<!--                 <div class="categoria">
                    <label class="label-titulos" for="nombre">Categoría</label>
                    <div class="contenedor-input-cat">
                        <input type="text" class="input-cat" name="categoriaProd" placeholder="Caramelo">
                    </div>
                </div>
                <div class="contenedor-tipo">
                    <label class="label-titulos" for="nombre">Tipo</label>
                    <div class="contenedor-input-tipo">
                        <input type="text" class="input-tipo" name="tipoProd" placeholder="Caramelo Masticable">
                    </div>
                </div> -->
                <button type="submit" id="add"><i class="bi bi-plus-circle"></i> GUARDAR PRODUCTO</button>
            </form>
        </main>

        <%- include('../partials/footer') %>
</body>

</html>